<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDisplayImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <VideoView
                android:id="@+id/vidDisplayVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnGallaryImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Select Image From Gallery" />
            <Button
                android:id="@+id/btnCameraImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Image From Camera" />
            <Button
                android:id="@+id/btnGallaryVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Video From Gallery" />
            <Button
                android:id="@+id/btnCameraVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Video From Camera" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
